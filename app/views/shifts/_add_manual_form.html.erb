<br>
  <%=form_tag add_metashift_path, :id => 'my_form' do %>
    <div class="form-group">
        <div class="col-sm-2 control-label">
            <label for="description">Category</label>
        </div>
        <div class="col-sm-10" style='margin-bottom:25px;'>
            <div class="input-group">
              <input id="category" type="text" name="metashift[category]" style="max-width:500px;"class="form-control">
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 control-label">
            <label for="description">Description</label>
        </div>
        <div class="col-sm-10" style='margin-bottom:25px;'>
            <div class="input-group">
              <textarea id="description" type="text" name="metashift[description]" style="width:500px;"class="form-control"></textarea>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2 control-label">
            <label for="multiplier">Hour Value</label>
        </div>
        <div class="col-sm-10" style='margin-bottom:50px;'>
            <div class="input-group">
              <input id="multiplier" type="text" name="metashift[multiplier]" style="max-width:350px;"class="form-control">
            </div>
        </div>
    </div>
    
  <button type="submit" class="btn btn-theme" id="submit_button">Add Workshift</button>
  
  <% end %>
  