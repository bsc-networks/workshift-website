.row
  .column.small-12
    %h2= @user.name
  .column.small-12.medium-6
    %h5 Contact Information
    %ul
      - if @user.workshift_manager?
        %li
          %span.label Workshift Manager
      - if @user.room_number.length > 0
        %li Room #{@user.room_number}
      - if @user.display_email?
        %li
          %b Email:
          = @user.email
      - if @user.display_phone_number? && @user.phone_number.length > 0
        %li
          %b Phone:
          = @user.phone_number
  .column.small-12.medium-6
    %h5 Workshift Category Preferences
    %ul
      - @preferences.each do |preference|
        %li
          = link_to preference.category.name, preference.category
          = preference.rank



  %h3.column.small Current Workshift Assignments
  .column.small-12
    = render 'users/workshift_assignments',
      workshift_assignments: @workshift_assignments

  %h3.column.small History of Workshift Assignments
  .column.small-12
    = render 'users/workshift_assignments_history',
      workshift_assignments: @workshift_assignments_history
