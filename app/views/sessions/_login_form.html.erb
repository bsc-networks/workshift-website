<h3>Please Sign In Below</h3> 
<div class="hline" style="margin-bottom:10px;"></div>
<%= form_tag '/login',{:class => 'form col-md-12 center-block'} do %>
  	<div class="form-group">
  		 <label class="sr-only" for="exampleInputEmail2">Email address</label>
  		 <%= text_field_tag :email, "", {class: "form-control", placeholder: "Email"} %>
  	</div>
  	<div class="form-group">
  		 <label class="sr-only" for="exampleInputPassword2">Password</label>
  		 <%= password_field_tag :password,"", {class: "form-control", placeholder: "Password"} %>
           <div class="help-block text-right"><a href="">Forget the password ?</a></div>
  	</div>
  	<div class="form-group">
  		 <button type="submit" class="btn btn-primary btn-block btn-theme">Sign In</button>
  	</div>
  	<div class="checkbox">
  		 <label>
  		 <input type="checkbox"> keep me logged-in
  		 </label>
  	</div>
<% end %>
