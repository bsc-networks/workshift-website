# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 2 space indentation for Haml
[*.haml]
indent_style = space
indent_size = 2

# 4 space indentation for Sass
[*.scss]
indent_style = space
indent_size = 2

# 4 space indentation for CSS
[*.css]
indent_style = space
indent_size = 4

# 2 space indentation for Ruby
[*.rb]
indent_syle = space
indent_size = 2

# 2 space indentation for Cucumber features
[*.feature]
indent_style = space
indent_size = 2

# 2 space indentation for Yaml
[*.yml]
indent_style = space
indent_size = 2
